<h1>Text</h1>
<h2>{{ section.settings.liquid-ref }}</h2>
<h1>Number</h1>
{% if section.settings.liquid-number > 0 %}
  {{ section.settings.liquid-number }}
{% endif %}
<h1>Checkbox</h1>
{% if section.settings.liquid-checkbox == true %}
  <h2>checkbox is checked</h2>
{% else %}
  <h2>Checkbox is not checked</h2>
{% endif %}
<h1>Range</h1>
{{ section.settings.liquid-range }}
<h1>Radio</h1>
{% if section.settings.liquid-radio == 'option-1' %}
  Option 1 Selected
{% else %}
  Option 2 Selected
{% endif %}
<h1>Select</h1>
{{ section.settings.liquid-select }}
<h1>Txtarea</h1>
{{ section.settings.liquid-txtarea }}
{% schema %}
 {
 "name": "Liquid Reference",
 "settings": [
 {
 "id": "liquid-ref",
 "type": "text",
 "label": "A Reference for Shopify Liquid"
 },
   {
 "id": "liquid-number",
 "type": "number",
 "label": "Add a number"
 },
 {
 "id": "liquid-checkbox",
 "type": "checkbox",
 "label": "A checkbox in liquid"
 },
    {
 "id": "liquid-radio",
 "type": "radio",
 "label": "Add a radio button",
 "options": [
 {
 "value": "option-1",
 "label": "Option 1"
 },
 {
 "value": "option-2",
 "label": "Option 2"
 }
 ]
 },
 {
 "id":"liquid-range",
 "type": "range",
 "label":"Range",
 "min":3,
 "max":12,
 "step":3,
 "default":3
 },
 {
 "id": "liquid-select",
 "type": "select",
 "label": "Add a select",
 "options": [
 {
 "value": "option-1",
 "label": "Option 1"
 },
 {
 "value": "option-2",
 "label": "Option 2"
 },
 {
    "value": "option-3",
    "label": "Option 3"
 }
 ],
 "default": "option-2"
 },
 {
 "id":"liquid-txtarea",
 "type": "textarea",
 "label": "Texarea"
 }
 ],
 "presets": [
 {
 "name": "Liquid Reference",
 "category":"Reference"
 }
 ]
 }
{% endschema %}

