  {
    "name": "New Blog Posts",
    "settings": [
      {
        "id": "liquid-range",
        "type": "range",
        "label": "Range",
        "min": 3,
        "max": 12,
        "step": 3,
        "default": 3
      },{
        "id":"new-blog",
        "type":"blog",
        "label":"Blog"
      }
    ],
    "presets": [
      {
        "name": "New Blog Posts",
        "category": "Posts"
      }
    ]
  }
{% endschema %}

